#
# Linux makefile
#

CFLAGS+=`sdl-config --cflags` `pkg-config --cflags alsa` -D__LINUX_ALSA__ `pkg-config --cflags libusb-1.0` -I/usr/local/include/libusb-1.0 -L/usr/local/lib
PREFIX=../linux/
SUFFIX=
LIBS+=`sdl-config --libs` `pkg-config --libs alsa` -lpthread -L/usr/local/lib `pkg-config --libs libusb-1.0`

include bme/makefile.common

include makefile.common
